<!--添加小组赛-->

  <!-- 比赛信息表单 -->
  <view class="sim-form">
    <view class="sim-form-group">
        <label style="width:400rpx; display:block; color:#999999">请完善小组赛信息</label>
        
    </view>

    <view class="sim-form-group">
      <label>项目:</label>
      <picker bindchange="bindPickerChange" value="{{matchIndex}}" range="{{matchArr}}" bindchange="matchChange">
        <view class="picker">
          {{matchArr[matchIndex]}}<text class="sim-arrow-bottom"></text>
        </view>
      </picker>
    </view>

    <view class="sim-form-group">
      <label>轮次:</label>
      <picker bindchange="bindPickerChange" value="{{matchIndex}}" range="{{matchArr}}" bindchange="matchChange">
        <view class="picker">
          {{matchArr[matchIndex]}}<text class="sim-arrow-bottom"></text>
        </view>
      </picker>
    </view>

    <view class="sim-form-group">
      <label>组别:</label>
      <input placeholder="请输入组别，例如：A组" />
    </view>

    <view class="sim-form-group">
      <label>参赛方1:</label>
      <input placeholder="请输入参赛1的名称" />
    </view>

    <view class="sim-form-group">
      <label>参赛方2:</label>
      <input placeholder="请输入参赛方2的名称" />
    </view>

    <view class="sim-form-group">
      <label>比赛日期:</label>
      <picker mode="date" value="{{matchTime}}" bindchange="startTimeChange">
        <view class="picker">
          {{startTime}}<text class="sim-arrow-bottom"></text>
        </view>
      </picker>
    </view>

    

     <view class="sim-form-group">
      <label>报名截止时间:</label>
      <picker mode="date" value="{{deadTime}}" bindchange="deadTimeChange">
        <view class="picker">
          {{deadTime}}<text class="sim-arrow-bottom"></text>
        </view>
      </picker>
    </view>

    <view class="sim-form-group">
      <label>比分:</label>
      <input placeholder="参赛方1" /> vs <input placeholder="参赛方2" />
    </view>

    <view class="sim-form-group">
      <label>比赛地点:</label>
      <input placeholder="请输入比赛地点" />
    </view>

  </view>


  <view>
    <button class="sim-btn sim-btn-success">提交</button>
  </view>

